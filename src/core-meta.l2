        (,[lst (` cand r)
          (loop build (conds emt) (parts [@rst [meta:reverse l r]])
            (if [emt? parts]
              conds
              (let (matcher [@frfst parts]) (prop [@ffst parts])
                {build [lst (`(,matcher (@ ,prop match-property:obj))r) conds r]
                  [@cdr parts]}))) r]))r)))

