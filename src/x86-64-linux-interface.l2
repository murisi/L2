(function memcpy (dest src n)
  (loop do-cpy (dest dest) (src src) (n n)
    (if n
      (do
        [setb dest [getb src]]
        {do-cpy [+ dest #:1] [+ src #:1] [- n #:1]})
      (ignore))))

(function memset (s c n)
  (loop do-set (s s) (n n)
    (if n
      (do
        [setb s c]
        {do-set [+ s #:1] [- n #:1]})
      (ignore))))

