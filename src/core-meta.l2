  (let (cond [@fst l]) (params [@frst l]) (consequent [@frrst l]) (alternate [@frrrst l])
  (let (bindings [meta:map2 params r
      (function _ (elt r) (`(,elt (storage bind-if:temp (ignore)))r)) r])
    (`(with bind-if:return (do
        (,[lst (` let r)
